<div class="page-container">

  <!-- START PAGE SIDEBAR -->

  <!-- END PAGE SIDEBAR -->

  <%= render 'brands/top_bar'%>
  <!-- PAGE CONTENT -->
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
        <%= render 'brands/side_bar', brands: @brands%>
    </div>
    <div class="col-sm-9 col-md-10 main" id="view">

        <% if @brands.length == 0 %>
            You have not created any brands
        <% else %>
            <%= render 'brands/show', brand: @brands[0]%>
        <% end %>

        <%= link_to ({:action=>"new", :controller=>"brands"}) do %>
            <div class="btn btn-primary">+ Add brand</div>
        <% end %>
    </div>
  </div>
</div>

