<!DOCTYPE html>
<html lang="en">
<head>
  <title>SwayUp - Brands</title>

  <!-- BEGIN META -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="keywords" content="brand dashboard">
  <meta name="description" content="Monitor and Track Brand Campaigns">
  <!-- END META -->

  <!-- BEGIN STYLESHEETS -->
  <%= stylesheet_link_tag  'brands', media: 'all', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Roboto:300italic,400italic,300,400,500,700,900' rel='stylesheet' type='text/css'/>
  <%= javascript_include_tag 'brands', 'data-turbolinks-track' => true %>
  <!-- END STYLESHEETS -->

  </head>
  <body class="menubar-hoverable header-fixed">

    <!-- BEGIN HEADER-->
    <header id="header" >
    <%= render 'top_bar.html.erb'%>
      </header>
      <!-- END HEADER-->

      <!-- BEGIN BASE-->
      <div id="base">

        <!-- BEGIN OFFCANVAS LEFT -->
        <div class="offcanvas">
        </div><!--end .offcanvas-->
        <!-- END OFFCANVAS LEFT -->

        <!-- BEGIN CONTENT-->
        <div id="content">
            <section>
                <div class="section-body">
                    <% if @brands.empty? %>
                      You have no brands
                    <% else %>
                      <%= render "campaigns/index", brand: @brands[0] %>
                    <% end %>
                </div>
            </section>
        </div><!--end #content-->
        <!-- END CONTENT -->

        <!-- BEGIN MENUBAR-->
        <div id="menubar" class="menubar-inverse ">
          <div class="menubar-fixed-panel">
            <div>
              <a class="btn btn-icon-toggle btn-default menubar-toggle" data-toggle="menubar" href="javascript:void(0);">
                <i class="fa fa-bars"></i>
              </a>
            </div>
            <div class="expanded">
              <a href="#">
                <span class="text-lg text-bold text-primary ">Sway&nbsp;Up</span>
              </a>
            </div>
          </div>
          <div class="menubar-scroll-panel">

            <!-- BEGIN MAIN MENU -->
            <ul id="main-menu" class="gui-controls">

              <!-- BEGIN DASHBOARD -->
              <li>
                <a href="#" class="active">
                  <div class="gui-icon"><i class="fa fa-home"></i></div>
                  <span class="title">Brand Tracker</span>
                </a>
              </li><!--end /menu-li -->
              <!-- END DASHBOARD -->

              <!-- BEGIN DASHBOARD -->
              <li>
                <%= link_to ({:action=>"new", :controller=>"brands", remote: true}) do %>
                  <div class="gui-icon"><i class="fa fa-plus fa-fw"></i></div>
                  <span class="title">Create Brand</span>
                <% end %>
              </li><!--end /menu-li -->
              <!-- END DASHBOARD -->
              <li>
                <a href="#">
                  <div class="gui-icon"><i class="fa fa-line-chart"></i></div>
                  <span class="title">Live Campaigns</span>
                </a>
              </li>
              <li>
                <%= link_to ({url: '/brand_list', remote: true}) do %>
                  <div class="gui-icon"><i class="fa fa-globe"></i></div>

                    <span class="title">All Brands</span>
                <% end %>
              </li>
              <li>
                <a href="#">
                  <div class="gui-icon"><i class="fa fa-volume-up"></i></div>
                  <span class="title">All Campaigns</span>
                </a>
              </li>
            </ul><!--end .main-menu -->
            <!-- END MAIN MENU -->

            <div class="menubar-foot-panel">
              <small class="no-linebreak hidden-folded">
                <span class="opacity-75">Copyright &copy; 2016</span> <strong>SwayUp</strong>
              </small>
            </div>
          </div><!--end .menubar-scroll-panel-->
        </div><!--end #menubar-->
        <!-- END MENUBAR -->

      </div><!--end #base-->
      <!-- END BASE -->

    </body>
    </html>

