<head>
  <%= stylesheet_link_tag    'users', media: 'all', 'data-turbolinks-track' => true %>
</head>
<div class="container">
   <div class="row">
    <div class="logo">
      <a href="/">Sway Up</a>
    </div>
  </div>
  <div class="row top-spacing">
    <div class="col-lg-8 col-lg-offset-2">
      <div class="frame">
        <div class="reg">
          <h1>Change Password</h1>
        </div>
        <div><hr  class="form-bar">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <%= f.hidden_field :reset_password_token %>

         <%= f.password_field :password, autocomplete: "off", , autofocus: true, :class => "form-styling", :placeholder => "New Password" %>

        <%= f.password_field :password_confirmation, autocomplete: "off",:class => "form-styling", :placeholder => "Confirm Password" %>

        <%= f.submit "Change Password", :class => "btn-sign" %>

          <% end %>

          <div class="forgot">
           <%= render "devise/shared/links" %>
         </div>
       </div>
     </div>
   </div>
 </div>
