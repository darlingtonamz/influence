<section id="intro">

  <div class="shadow-overlay"></div>

  <div class="intro-content">
    <div class="row">

      <div class="col-twelve">

        <div class='video-link'>
          <a href="#video-popup">
            <svg x="0" y="0" width="100px" height="100px" viewBox="0 0 200 200" class="play play--ripple">
              <circle fill="transparent" stroke="#853e7e" stroke-width="8" cx="100" cy="100" r="96"/>
              <circle clip-path="url(#clipper)" fill="url(#ripple)" cx="100" cy="100" r="120" />
              <polygon fill="#fff" points="70.993,60.347 153.398,102.384 70.993,144.42   "/>
            </svg>

            <svg x="0" y="0" width="0" height="0">
              <defs>
                <clipPath id="clipper">
                  <circle cx="100" cy="100" r="93" />
                </clipPath>
                <radialGradient id="ripple">
                  <stop offset="0%" stop-color="#000" stop-opacity="0.25">
                    <animate attributeName="offset" values="0;0.70" begin="0.2s" dur="1.8s" repeatCount="indefinite" />
                  </stop>
                  <stop offset="5%" stop-color="#853e7e" stop-opacity="0.25">
                    <animate attributeName="offset" values="0.05;0.75" begin="0" dur="1.8s" repeatCount="indefinite" />
                  </stop>
                  <stop offset="10%" stop-color="#000" stop-opacity="0.25">
                    <animate attributeName="offset" values="0.10;1" begin="0" dur="1.8s" repeatCount="indefinite" />
                  </stop>
                </radialGradient>
              </defs>
            </svg>
          </a>
        </div>

        <h5>Welcome to Sway Up</h5>
        <h1><span>Discover</span> <span style="color:#F191F8">Key Influencers</span> <br>
          <span>Get Connected</span> To Your <span style="color:#F191F8">Target Audience</span></h1>
        <% if user_signed_in? %>
          <%= link_to ({:action=>"index", :controller=>"ambassadors"}) do %>
            <div class="button stroke smoothscroll">I'm an Influencer</div>
          <% end %>
        <% else %>
          <%= link_to "I'm an Influencer", new_user_session_path(role:"influencer"), :class => 'button stroke smoothscroll' %>
        <% end %> <!--redirect to sign in for influencers -->
        <% if user_signed_in? %>
          <%= link_to ({:action=>"index", :controller=>"brands"}) do %>
          <div class="button stroke smoothscroll">I'm an Advertiser</div>
          <% end %>
        <% else %>
          <%= link_to "I'm an Advertiser", new_user_session_path(role:"brand"), :class => 'button stroke smoothscroll' %>
        <% end %> <!--redirect to sign in for advertisers -->
      </div>
      <div class="arrow animated bounce"><a href="#home">
        <img width="40" height="40" alt="" src="data:image/svg+xml;base64," /></a>
      </div>
    </div>
  </div>

  <!-- Modal Popup Video
========================================================= -->

  <div id="video-popup" class="popup-modal mfp-hide">

    <div class="fluid-video-wrapper">
      <iframe src="http://player.vimeo.com/video/14592941?title=0&amp;byline=0&amp;portrait=0&amp;color=faec09" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
    </div>

    <a class="close-popup">Close</a>

  </div> <!-- /video-popup -->

</section> <!-- /intro -->


