<script>
  //Getting Total Likes & Comments for Posts
$( document ).ready(function() {
  var hashtag = $('.hashtag').text();
  var totalLikes = 0;
  var totalComments = 0;
  var postsCount = 0;
  console.log(hashtag);
  //Getting likes & comments INSTAGRAM API
  $.ajax({
    type: 'GET',
    dataType: 'jsonp',
    url: "https://api.instagram.com/v1/tags/" + hashtag + "/media/recent?access_token=806401368.5aa13be.4a08df065cbb41469c9cc20041432d3b&count=33",
    success: function(data) {
      postsCount += data.data.length;
      for (var i = 0; i < data.data.length; i++) {
        totalLikes += data.data[i].likes.count;
        totalComments += data.data[i].comments.count;
      }
      if (data.pagination.next_url === undefined) {
        $('.totalLikes').text(totalLikes);
        $('.totalComments').text(totalComments);
      } else {
        $('.totalLikes').text(totalLikes);
        $('.totalComments').text(totalComments);
        getNextPosts(data.pagination.next_url, totalLikes, totalComments, postsCount);
      }

    }
  });

